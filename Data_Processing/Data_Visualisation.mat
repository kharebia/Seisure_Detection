clear;
close all;
home = pwd;

subject = "Dog_2";
pics = 6; % number of pictures to generate
%type = "interictal"; % choosse ictal or interictal

for type = ["interictal", "ictal"]
    for s = 1:pics
        cd ("../Data/" + subject);
        data = zeros(256, 250);
        for k = 1:10 % Load 10 files and combine them

            file_name = subject + "_" + type + "_segment_" + (k + s*10 - 10);
            file = load(file_name + ".mat");

            for row = 1:16
                data((row*16-15):(row*16), (k*25 - 24):(k*25)) = file.data(:, (row*25 - 24):(row*25));
            end

        end
        cd ../../MATLAB_Scripts/;

        figure;
        h = heatmap(data);
        grid off;
        ax = gca; % Get current axes
        title('Heatmap of '+" "+ subject+" " + type + ' Data ' + s);

        h.XDisplayLabels = repmat({''},1,size(h.ColorData,2));   % blank x labels
        h.YDisplayLabels = repmat({''},1,size(h.ColorData,1));   % blank y labels

        clim([-200 200]);
        colormap('jet');
    end
end

